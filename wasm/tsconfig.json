{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["es2015", "dom", "es6"],
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "declaration": true,
    "outDir": "./dist/main",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@/../rust/pkg/*": ["../rust/pkg/*"],
      "buttplug": ["../../node_modules/buttplug/dist/web/buttplug.mjs"],
      "eventemitter3": ["../../node_modules/eventemitter3/index.js"]
    }
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ]
}